<launch>
    <!-- Configurable options -->
    <arg name="robot_model" default="mbzirc"/>
    <arg name="id" default="1"/>
    <arg name="mode" default="sitl"/>
    <arg name="frames" default="/config/map_simulation.xml"/>
    <arg name="material" default="Orange"/>

    <param name="frames_file" type="str" value="$(arg frames)" />

    <group if="$(eval mode == 'sitl')">
        <!-- Spawn model in Gazebo -->
        <node pkg="px4_bringup" type="gazebo_spawn.py" name="gazebo_spawn_$(arg id)" output="screen"
        args="-name=$(arg robot_model) -id=$(arg id)
        -frames=$(arg frames)
        -material=$(arg material)"/>

        <!-- Spawn px controller -->
        <!-- Important parameter cwd="node", px4 link generation may cause errors otherwise -->
        <node pkg="px4_bringup" type="px4_spawn.py" cwd="node" name="px4_spawn_$(arg id)" output="screen"
        args="-name=$(arg robot_model) -id=$(arg id) -mode=$(arg mode)"/>
    </group>
    
    <!-- Spawn mavros node -->
    <node pkg="px4_bringup" type="mavros_spawn.py" name="mavros_spawn_$(arg id)" output="screen"
    args="-id=$(arg id) -mode=$(arg mode)"/>

</launch>
